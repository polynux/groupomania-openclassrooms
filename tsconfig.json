{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2017",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "skipDefaultLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@@/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "src/types"
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "dist",
        "client"
    ]
}